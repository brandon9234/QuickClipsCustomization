{%- comment -%}theme-check-disable NestedSnippet,SchemaJsonFormat{%- endcomment -%}

{% unless section.index < 4 or request.design_mode %}<template class="deferred block lazy-template" data-observe-margin="2000px">{% endunless %}

<script src="{{ 'product-compare.js' | asset_url }}" defer="defer"></script>

{{ 'component-compare.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{%- if settings.swatch_enabled -%}
  {{ 'component-swatch.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- if settings.card_enable_quick_add -%}
  <link rel="stylesheet" href="{{ 'quick-order-list.css' | asset_url }}" media="print" onload="this.media='all'">
  <link rel="stylesheet" href="{{ 'quantity-popover.css' | asset_url }}" media="print" onload="this.media='all'">
  <lazy-script src="{{ 'product-form.js' | asset_url }}" defer="defer"></lazy-script>
  <lazy-script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></lazy-script>
  <lazy-script src="{{ 'quick-add-bulk.js' | asset_url }}" defer="defer"></lazy-script>
  <lazy-script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></lazy-script>
  <lazy-script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></lazy-script>
  <lazy-script src="{{ 'quick-order-list.js' | asset_url }}" defer="defer"></lazy-script>
{%- endif -%}

<product-compare
    class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %} {{ section.settings.visibility }} {%- render 'class-time-of-day-to-show' -%}"
    data-search-url="{{ routes.search_url }}?section_id={{ section.id }}&type=product"
    data-products="{{ section.settings.products | map: 'id' | join: ',' }}"
    data-compare-is-loading="{% if request.design_mode and section.settings.products == empty %}false{% else %}true{% endif %}"
>
  {%- if request.design_mode or request.page_type == 'search' and search.performed and search.results_count > 0 -%}
    {% render 'product-compare-grid',
        products: search.results,
        product_count: search.results_count,
        show_onboarding: request.design_mode
    %}
  {%- endif -%}
</product-compare>

{% unless section.index < 4 or request.design_mode %}</template>{% endunless %}

