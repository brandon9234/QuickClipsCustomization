{%- comment -%}theme-check-disable SchemaJsonFormat{%- endcomment -%}
{%- if section.index < 3 or request.design_mode -%}
  {{ 'component-stats.css' | asset_url | stylesheet_tag }}
{%- else -%}
  <link rel="stylesheet" href="{{ 'component-stats.css' | asset_url }}" media="print" onload="this.media='all'">
{%- endif -%}

{%- style -%}
  #Slider-{{ section.id }} {
    --grid-mobile-vertical-spacing: {{ section.settings.spacing_grid | times: 0.6 | at_least: 20 }}px;
    --grid-mobile-horizontal-spacing: {{ section.settings.spacing_grid | times: 0.6 | at_least: 20 }}px;
  }

  @media screen and (min-width: 750px) {
    #Slider-{{ section.id }} {
      --grid-desktop-vertical-spacing: {{ section.settings.spacing_grid }}px;
      --grid-desktop-horizontal-spacing: {{ section.settings.spacing_grid }}px;
    }
  }
{%- endstyle -%}

{% unless section.settings.full_width_section %}
<div class="isolate {{ section.settings.line_separator }} page-width section__inner {{ section.settings.top_padding }} {{ section.settings.bottom_padding }} {{ section.settings.visibility }} {%- render 'class-time-of-day-to-show' -%}">
  <div class="content-container overflow-hidden">
{% endunless %}

{%- render 'multicolumn' -%}

{% unless section.settings.full_width_section %}
  </div>
</div>
{% endunless %}

