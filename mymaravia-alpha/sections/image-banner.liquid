{%- comment -%}theme-check-disable SchemaJsonFormat{%- endcomment -%}
{%- if request.design_mode or section.settings.hide_when_empty == false or section.settings.image != blank or section.settings.image_2 != blank -%}
  {%- liquid
    assign image = section.settings.image
    assign media_aspect_ratio = section.settings.image_ratio
    
    if media_aspect_ratio != 'custom'
      assign ratio = 1.77
      if media_aspect_ratio == 'landscape_wide'
        assign ratio = 1.77
      elsif media_aspect_ratio == 'landscape_wider'
        assign ratio = 2.33
      elsif media_aspect_ratio == 'landscape'
        assign ratio = 1.33
      elsif media_aspect_ratio == 'square'
        assign ratio = 1
      elsif image and media_aspect_ratio == 'adapt'
        assign ratio = image.aspect_ratio
      endif
    endif

    assign full_width = '100vw'
    assign widths = '375, 500, 720, 1100, 1500, 1780, 2000, 3000, 3840'

    assign skew_images = false
    if section.settings.skew_images and section.settings.image != blank and section.settings.image_2 != blank
      assign skew_images = true
    endif

    assign fix_image = section.settings.fix_image
    if skew_images
      assign fix_image = false
    endif

    if section.settings.fix_image == 'fixed' and skew_images == false
      assign half_width = '100vw'
      assign stacked_sizes = '100vw'
    else
      assign half_width = '50vw'
      assign stacked_sizes = '(min-width: 750px) 50vw, 100vw'
    endif

    assign fetch_priority = 'auto'
    if section.index < 3 or request.design_mode
      assign fetch_priority = 'high'
    endif

    if section.index == 1
      assign preload = true
    else
      assign preload = false
    endif

    assign fallback_alt = section.settings.image_link | split: "/" | last | replace: '-', ' '
  -%}

  <div class="color-{{ section.settings.color_scheme }} isolate gradient {{ section.settings.line_separator }} {{ section.settings.visibility }} {%- render 'class-time-of-day-to-show' -%}">
    <div class="section__inner
      {% unless section.settings.full_width %}
        page-width {{ section.settings.top_padding }} {{ section.settings.bottom_padding }}
      {% else %}
        pt-0 pb-0
      {% endunless %}
      {% if section.settings.show_text_below %} mobile-text-below{% endif %}"
    >
      <div class="image-banner-section
          {% unless section.settings.full_width %}
            {% if section.settings.container_color_scheme == section.settings.color_scheme and section.settings.show_text_below %}
              md:border-radius-media is-standard-color-scheme
            {% else %}
              border-radius-media
            {% endif %}
              overflow-hidden transform-none
          {% endunless %}"
      >
        {% if section.settings.full_width and section.settings.full_width_animate %}
          <script src="{{ 'full-width-animate.js' | asset_url }}" defer="defer"></script>
          <full-width-animate>
        {% endif %}

        <div
          id="Banner-{{ section.id }}"
          class="banner
            banner--content-align-{{ section.settings.desktop_content_alignment }}
            banner--content-align-mobile-{{ section.settings.mobile_content_alignment }}
            {% if skew_images %} skew{% endif %}
            {% if media_aspect_ratio == 'custom' %} section-height-responsive--desktop{% else %} {% if section.settings.image_2 != blank  %}md:{% endif %}ratio{% endif %}
            {% if section.settings.stack_images_on_mobile and section.settings.image != blank and section.settings.image_2 != blank %} banner--stacked{% endif %}
            {% if section.settings.image != blank and section.settings.image_2 == blank %} banner--one-image{% endif %}
            {% if section.settings.image != blank and section.settings.image_2 != blank %} banner--two-images{% endif %}
            {% if media_aspect_ratio != 'custom' %} xs:h-auto{% endif %}
            {% if media_aspect_ratio == 'custom' %} md:h-auto{% endif %}
            {% if section.settings.show_text_below %} banner--mobile-bottom{%- endif -%}
            {% if section.settings.show_text_below == false %}{% if section.settings.show_text_box == 'mobile' or section.settings.show_text_box == 'always' %} banner--mobile-box{% else %} banner--mobile-transparent{% endif %}{% endif %}
            {% if section.settings.show_text_box == 'desktop' or section.settings.show_text_box == 'always' %} banner--desktop-box{% else %} banner--desktop-transparent{% endif %}"

          style="--overlay-opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
            {% if media_aspect_ratio == 'custom' %}
              --mobile-height: {{ section.settings.mobile_section_height }}px;--desktop-height: {{ section.settings.desktop_section_height }}px
            {% else %}
              --ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;
            {% endif %}"
        >
          {%- if section.settings.image != blank -%}
            <div class="banner__media media image-overlay
              {% if media_aspect_ratio == 'custom' %} section-height-responsive--mobile{% else %} ratio{% endif %}
              {% if section.settings.image == blank and section.settings.image_2 == blank %} placeholder{% endif %}
              {% if section.settings.image_2 != blank %} banner__media-half banner__media-left-half{% endif %}
              {% if fix_image %}
                animate--fixed
              {% endif %}"
            >
              {%- liquid
                assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
                if section.settings.image_2 != blank
                  assign image_class = 'banner__media-image-half'
                endif

                if settings.animations_reveal_on_scroll and section.index > 2 and fix_image != true
                  assign image_class = image_class | append: ' scroll-trigger animate--zoom-in'
                endif

                if section.settings.image_2 != blank and section.settings.stack_images_on_mobile
                  assign sizes = stacked_sizes
                elsif section.settings.image_2 != blank
                  assign sizes = half_width
                else
                  assign sizes = full_width
                endif
              -%}
              {{
                section.settings.image
                | image_url: width: 3840
                | image_tag:
                  width: section.settings.image.width,
                  height: image_height,
                  class: image_class,
                  sizes: sizes,
                  widths: widths,
                  fetchpriority: fetch_priority
              }}

              {%- if section.settings.image_link != blank -%}
                <a href="{{ section.settings.image_link }}" class="focus-inset border-radius-media absolute top-0 left-0 w-full h-full visible-xs">
                  <span class="visually-hidden">{{ section.settings.image.alt | default: fallback_alt }}</span>
                </a>
              {%- endif -%}
            </div>
          {%- elsif section.settings.image_2 == blank -%}
            <div class="banner__media media image-overlay
                {% if media_aspect_ratio == 'custom' %} section-height-responsive--mobile{% else %} ratio{% endif %}
                {% if section.settings.image == blank and section.settings.image_2 == blank %} placeholder{% endif %}
                {% if section.settings.image_2 != blank %} banner__media-half banner__media-right-half{% endif %}
                {% if fix_image %}
                  animate--fixed
                {% endif %}"
            >
              {{ 'collection-3' | placeholder_svg_tag: 'placeholder-svg placeholder-svg--cover' }}
            </div>
          {%- endif -%}

          {%- if section.settings.image_2 != blank -%}
            <div class="banner__media media image-overlay
              {% if media_aspect_ratio == 'custom' %} section-height-responsive--mobile{% else %} ratio{% endif %}
              {% if section.settings.image != blank %} banner__media-half banner__media-right-half{% endif %}
              {% if fix_image %} animate--fixed{% endif %}"
            >
              {%- liquid
                assign image_height_2 = section.settings.image_2.width | divided_by: section.settings.image_2.aspect_ratio
                if section.settings.image != blank
                  assign image_class_2 = 'banner__media-image-half'
                endif

                if settings.animations_reveal_on_scroll and section.index > 2 and fix_image != true
                  assign image_class_2 = image_class_2 | append: ' scroll-trigger animate--zoom-in'
                endif

                if section.settings.image != blank and section.settings.stack_images_on_mobile
                  assign sizes = stacked_sizes
                elsif section.settings.image_2 != blank
                  assign sizes = half_width
                else
                  assign sizes = full_width
                endif
              -%}
              {{
                section.settings.image_2
                | image_url: width: 3840
                | image_tag:
                  width: section.settings.image_2.width,
                  height: image_height_2,
                  class: image_class_2,
                  sizes: sizes,
                  widths: widths,
                  fetchpriority: fetch_priority
              }}

              {%- if section.settings.image_link != blank -%}
                <a href="{{ section.settings.image_link }}" class="focus-inset border-radius-media absolute top-0 left-0 w-full h-full visible-xs">
                  <span class="visually-hidden">{{ section.settings.image.alt | default: fallback_alt }}</span>
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}

          <div class="banner__content
              {% if media_aspect_ratio == 'custom' and section.settings.show_text_below == false %} section-height-responsive--mobile{% endif %}
              {{ section.settings.mobile_content_position }}
              {{ section.settings.desktop_content_position }} page-width
              {% if settings.animations_reveal_on_scroll and section.index > 2 %} scroll-trigger animate--fade-in{% endif %}"
          >
            {%- if section.settings.image_link != blank -%}
              <a href="{{ section.settings.image_link }}" class="focus-inset border-radius-media absolute top-0 left-0 w-full h-full{% if section.settings.show_text_below %} hidden-xs{% endif %}">
                <span class="visually-hidden">{{ section.settings.image.alt | default: fallback_alt }}</span>
              </a>
            {%- endif -%}

            <div class="banner__box section-content max-w-{{ section.settings.content_max_width }} content-container content-container--full-width-mobile color-{{ section.settings.container_color_scheme }} gradient items-{{ section.settings.mobile_content_alignment }} md:items-{{ section.settings.desktop_content_alignment }} text-{{ section.settings.mobile_content_alignment }} md:text-{{ section.settings.desktop_content_alignment }}{% if section.settings.container_color_scheme == section.settings.color_scheme and section.settings.show_text_below and section.settings.full_width == false %} xs:pb-0{% endif %}">
              {%- liquid
                for block in section.blocks
                  render 'standard-blocks', section_name: 'banner', block: block
                endfor
              -%}
            </div>
          </div>
        </div>

        {% if section.settings.full_width and section.settings.full_width_animate %}
          </full-width-animate>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}

