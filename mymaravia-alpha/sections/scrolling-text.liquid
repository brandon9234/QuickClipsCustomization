{%- comment -%}theme-check-disable SchemaJsonFormat{%- endcomment -%}
{%- liquid
  assign is_empty = true
  for block in section.blocks
    if block.settings.heading != blank or block.settings.text != blank or block.settings.caption != blank or block.settings.button_label_1 != blank or block.settings.button_label_2 != blank or block.settings.custom_liquid != blank or block.settings.image_1 != blank or block.settings.image_2 != blank or block.settings.image_3 != blank or block.settings.image_4 != blank or block.settings.icon != blank or block.settings.stat_number != blank or block.settings.discount_code != blank
      assign is_empty = false
      break
    endif
  endfor
-%}

{%- if request.design_mode or section.settings.hide_when_empty == false or is_empty == false -%}
  {%- if section.location == 'header' or section.index < 3 or request.design_mode -%}
    {{ 'component-scrolling-text.css' | asset_url | stylesheet_tag }}
  {%- else -%}
    <link rel="stylesheet" href="{{ 'component-scrolling-text.css' | asset_url }}" media="print" onload="this.media='all'">
  {%- endif -%}

  <div class="isolate{% unless section.settings.full_width %} page-width section__inner {{ section.settings.top_padding }} {{ section.settings.bottom_padding }}{% endunless %} {{ section.settings.visibility }} {%- render 'class-time-of-day-to-show' -%}">
    <div class="section__inner scrolling-text z-1 content-container color-{{ section.settings.color_scheme }} gradient overflow-hidden
        {% if section.settings.full_width %} content-container--full-width{% endif %}"
         style="padding-top: {{ section.settings.spacing }}rem; padding-bottom: {{ section.settings.spacing }}rem; --block-gap: {{ section.settings.gap }}rem;"
    >
      {% if section.settings.full_width %}<div class="{{ section.settings.top_padding }} {{ section.settings.bottom_padding }}">{% endif %}
        {%- if section.settings.view_all_text != blank -%}
          {% capture view_all %}
            <div class="section-view-all gallery__view-all{% if settings.animations_reveal_on_scroll and section.index > 2 %} scroll-trigger animate--fade-in{% endif %}">
              <a
                  href="{{ section.settings.view_all_link }}"
                  class="link un-underlined-link button-with-icon button-with-icon--right {{ section.settings.view_all_text_size }}"
              >
                {{ section.settings.view_all_text }}
                {% render 'icon-arrow' %}
              </a>
            </div>
          {% endcapture %}
        {%- endif -%}

        {% render 'standard-section-heading',
            section_name: 'scrolling-text',
            section: section,
            view_all: view_all
        %}

        <div class="flex md:w-full{% if section.settings.full_width %} m-0{% endif %}">
          <div class="scrolling-text__wrapper{% if section.settings.pause_on_hover %} scrolling-text__wrapper--pause-on-hover{% endif %} section-content p-0 flex whitespace-nowrap"
            style="--speed: {{ 31 | minus: section.settings.speed }}s;--direction: {{ section.settings.direction }};">
            {%- capture scrolling_text -%}
              {%- liquid
                for block in section.blocks
                  render 'standard-blocks', section_name: 'scrolling-text', block: block, animate: false
                endfor
              -%}
            {%- endcapture -%}

            {% unless section.index < 4 or section.location == 'header' or request.design_mode %}<template class="deferred block lazy-template">{% endunless %}

            {%- for i in (1..16) -%}
              <div class="scrolling-text__content flex items-center"{% unless forloop.first %} aria-hidden="true"{% endunless %}>
                {%- if forloop.first -%}
                  {{ scrolling_text }}
                {%- else -%}
                  {{ scrolling_text | replace: ' href=', ' tabindex="-1" href=' | replace: '<button ', '<button tabindex="-1" ' }}
                {%- endif -%}
              </div>
            {%- endfor -%}

            {% unless section.index < 4 or section.location == 'header' or request.design_mode %}</template>{% endunless %}
          </div>
        </div>
      {% if section.settings.full_width %}</div>{% endif %}
    </div>
  </div>
{%- endif -%}

