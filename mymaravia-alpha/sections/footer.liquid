          "visible_if": "{{ block.settings.heading != blank }}",
          "default": true,
          "label": "Collapsible row on mobile"
        },
        {
          "type": "checkbox",
          "id": "wider",
          "default": false,
          "label": "Wider on desktop"
        },
        {
          "type": "header",
          "content": "Image"
        },
