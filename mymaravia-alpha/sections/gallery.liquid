{%- comment -%}theme-check-disable SchemaJsonFormat,ImgLazyLoading{%- endcomment -%}
{%- liquid
  assign section_is_empty = true
  assign block_count = 0
  for block in section.blocks
    if block.settings.icon != blank or block.settings.text != blank or block.settings.title != blank or block.settings.image != blank
      assign section_is_empty = false
      assign block_count = block_count | plus: 1
    endif
  endfor
-%}

{%- if request.design_mode or section.settings.hide_when_empty == false or section_is_empty == false -%}
{%- liquid
  assign columns_desktop = section.settings.columns_desktop
  assign columns_mobile = 1

  assign show_mobile_slider = false
  if section.settings.mobile_layout == 'carousel'
    assign show_mobile_slider = true
  endif

  if settings.animations_reveal_on_scroll and section.index > 2 and section.location != 'header'
    assign animate = true
  else
    assign animate = false
  endif

  assign img_loading = 'lazy'
  if section.index == 1 or request.design_mode
    assign img_loading = 'eager'
  endif
-%}
  {%- if section.index < 3 or request.design_mode -%}
    {{ 'component-gallery.css' | asset_url | stylesheet_tag }}
    {{ 'component-slider.css' | asset_url | stylesheet_tag }}
  {%- else -%}
    <link rel="stylesheet" href="{{ 'component-gallery.css' | asset_url }}" media="print" onload="this.media='all'">
    <link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
  {%- endif -%}

  <div class="color-{{ section.settings.section_color_scheme }} isolate gradient {{ section.settings.line_separator }}{% if section.settings.full_width %} gallery--full-width{% endif %} {{ section.settings.visibility }} {%- render 'class-time-of-day-to-show' -%}">
    <div class="section__inner {{ section.settings.top_padding }} {{ section.settings.bottom_padding }}">
      {%- if section.settings.view_all_text != blank -%}
        {% capture view_all %}
          <div class="section-view-all gallery__view-all{% if settings.animations_reveal_on_scroll and section.index > 2 %} scroll-trigger animate--fade-in{% endif %}">
            <a
                href="{{ section.settings.view_all_link }}"
                class="link un-underlined-link button-with-icon button-with-icon--right {{ section.settings.view_all_text_size }}"
            >
              {{ section.settings.view_all_text }}
              {% render 'icon-arrow' %}
            </a>
          </div>
        {% endcapture %}
      {%- endif -%}

      {% render 'standard-section-heading',
          section_name: 'gallery',
          section: section,
          view_all: view_all
      %}

      <slider-component class="slider-mobile-gutter
        {% unless settings.carousel_arrows %} slide-component--show-arrows{% endunless %}
        {% if show_mobile_slider == false and section.settings.full_width == false %} page-width{% endif %}
        {% unless section.settings.full_width %} page-width-desktop{% endunless %}"
      >
        <ul
            id="Slider-{{ section.id }}"
            class="gallery-grid section-grid grid mb-0 mt-0
            {% if section.settings.full_width %}
              gallery-grid--rounding-none
            {% else %}
              gallery-grid--rounding-{{ section.settings.corner_rounding }}
            {% endif %}
            grid--{{ columns_desktop }}-col-desktop
            grid--central-loners
            {% if block_count == 0 %}
              grid--2-col-tablet-down
            {% else %}
              grid--{{ columns_mobile }}-col-tablet-down
            {% endif %}
            {% if show_mobile_slider %}
              slider slider--tablet grid--peek
            {% endif %}"
            role="list"
            aria-label="{{ 'general.slider.name' | t }}"
            style="--gallery-grid-cols: {{ section.settings.columns_desktop }}; --gallery-grid-gap: {{ section.settings.spacing_grid }}px;--gallery-grid-gap-mobile: {{ section.settings.spacing_grid_mobile }}px;--mobile-height: {{ section.settings.mobile_section_height }}px;--desktop-height: {{ section.settings.desktop_section_height }}px;--mobile-height-double: {{ section.settings.mobile_section_height | times: 2 }}px;--desktop-height-double: {{ section.settings.desktop_section_height | times: 2 }}px;"
        >
          {%- for block in section.blocks -%}
            {%- liquid
              if block.settings.title contains "<a " or block.settings.text contains "<a " or block.settings.button_label != blank
                assign content_has_link = true
              else
                assign content_has_link = false
              endif
            -%}
            <li
                id="Slide-{{ section.id }}-{{ forloop.index }}"
                class="gallery__item grid__item pt-0 pb-0
                {% if forloop.first and show_mobile_slider and section.settings.full_width %} ml-0{% endif %}
                {% if block.settings.wide %} gallery__item-wide{% endif %}
                {% if block.settings.tall %} gallery__item-tall{% endif %}
                {% if show_mobile_slider %} slider__slide{% endif %}
                {% if animate %} scroll-trigger animate--fade-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if animate %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
            >
              <{% if content_has_link == false and block.settings.card_link != blank %}a href="{{ block.settings.card_link }}"{% else %}div{% endif %}
                  class="responsive-card-padding overflow-hidden h-full flex flex-col content-container color-{{ block.settings.card_color_scheme }} gradient text-{{ block.settings.column_alignment }}
                    {% if section.settings.full_width %} rounded-none{% endif %}
                    {% if content_has_link == false and block.settings.card_link != blank %} full-unstyled-link--foreground hover-zoom focus-this-inner-inset{% endif %}"
                  style="--responsive-card-padding: {{ section.settings.content_padding }}rem;{% if block.settings.image != blank %}--overlay-opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }};{% endif %}"
              >
                {%- assign image = "" -%}
                {%- if block.settings.image != blank -%}
                  {% capture image %}
                    <div class="inline-block w-full h-full{% if section.settings.full_width %} global-media-settings--full-width{% endif %}">
                      <div class="media media--transparent w-full h-full">
                        {%- liquid
                          assign image_width = section.settings.columns_desktop
                          if block.settings.tall or block.settings.wide
                            assign image_width = image_width | divided_by: 2 | round
                          elsif image_width > 2
                            assign image_width = image_width | minus: 1
                          endif
                        -%}
                        <img
                          srcset="
                          {%- if block.settings.image.width >= 165 -%}{{ block.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
                          {%- if block.settings.image.width >= 360 -%}{{ block.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
                          {%- if block.settings.image.width >= 533 -%}{{ block.settings.image | image_url: width: 533 }} 533w,{%- endif -%}
                          {%- if block.settings.image.width >= 720 -%}{{ block.settings.image | image_url: width: 720 }} 720w,{%- endif -%}
                          {%- if block.settings.image.width >= 940 -%}{{ block.settings.image | image_url: width: 940 }} 940w,{%- endif -%}
                          {%- if block.settings.image.width >= 1066 -%}{{ block.settings.image | image_url: width: 1066 }} 1066w,{%- endif -%}
                          {{ block.settings.image | image_url }} {{ block.settings.image.width }}w
                        "
                          src="{{ block.settings.image | image_url: width: 720 }}"
                          sizes="
                            (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: image_width }}px,
                            (min-width: 1200px) calc((100vw - 130px) / {{ image_width }}),
                            (min-width: 992px) calc((100vw - 130px) / {{ image_width | minus: 1 | at_least: 1 }}),
                            (min-width: 768px) calc((100vw - 120px) / {{ image_width | minus: 1 | at_least: 1 }}),
                            (min-width: 576px) calc((100vw - 50px) / {{ columns_mobile }}),
                            calc((100vw - 30px) / {{ columns_mobile }})"
                          alt="{{ block.settings.image.alt | escape }}"
                          class="gallery__image"
                          loading="{{ img_loading }}"
                          width="{{ block.settings.image.width }}"
                          height="{{ block.settings.image.height }}"
                          {% if block.settings.image.presentation %}style="object-position: {{ block.settings.image.presentation.focal_point }}"{% endif -%}
                        >
                      </div>
                    </div>
                  {% endcapture %}
                {%- endif -%}

                <div class="absolute inset image-overlay">
                  {% if block.settings.image != blank %}
                    {{ image }}
                  {% endif %}
                </div>

                <div
                    class="card-padding block-when-empty relative grow section-height-responsive--mobile section-height-responsive--desktop
                      max-w-{{ block.settings.content_max_width }} flex flex-col {{ block.settings.text_vertical_alignment }} self-{{ block.settings.column_alignment }}
                      {% if block.settings.image != blank %} z-1{% endif %}"
                >
                  {%- if block.settings.icon != blank and block.settings.stat_number == blank -%}
                    {% render 'standard-blocks', type: 'icon', section_name: 'gallery', block: block, class: 'mb--icon-container' %}
                  {%- endif -%}

                  {%- if block.settings.title != blank -%}
                    <h3 class="lh-13 color-heading mt-0{% if block.settings.text != blank %} mb-05{% else %} mb-0{% endif %} last-child:mb-0 inline-richtext {{ section.settings.heading_style }}{% if block.settings.heading_size == "custom" %} text-size-custom{% else %} {{ block.settings.heading_size }}{% endif %}"
                        {% if block.settings.heading_size == "custom" %}style="--custom-font-size:{{ block.settings.heading_size_custom }}em"{% endif %}
                    >
                      {%- render 'animated-text' with block.settings.title -%}
                    </h3>
                  {%- endif -%}

                  {%- if block.settings.text != blank -%}
                    <div
                        class="rte text-balance mb-1 last:mb-0 {{ block.settings.text_style }} {{ block.settings.text_size }}{% if settings.animations_reveal_on_scroll and section.index > 2 %} scroll-trigger animate--slide-in{% endif %}"
                        {{ block.shopify_attributes }}
                        {% if settings.animations_reveal_on_scroll and section.index > 2 %}
                          data-cascade
                          style="--animation-order: {{ forloop.index | default: 1 }};"
                        {% endif %}
                    >
                      {{ block.settings.text }}
                    </div>
                  {%- endif -%}

                  {%- if block.settings.button_label != blank -%}
                    <div
                        class="
                          {% if block.settings.title != blank and block.settings.text == blank and block.settings.button_style != 'link' %}mt-05{% endif %}
                          {% if block.settings.button_label != blank %} banner__buttons--multiple{% endif %}
                          {% if settings.animations_reveal_on_scroll and section.index > 2 %} scroll-trigger animate--slide-in{% endif %}"
                        {{ block.shopify_attributes }}
                        {% if settings.animations_reveal_on_scroll and section.index > 2 %}
                          data-cascade
                          style="--animation-order: {{ forloop.index | default: 1 }};"
                        {% endif %}
                    >
                      {%- if block.settings.button_label != blank -%}
                        <a
                            {% if block.settings.button_link == blank %}
                              role="link" aria-disabled="true"
                            {% else %}
                              href="{{ block.settings.button_link }}"
                            {% endif %}
                            class="mt-1 {{ block.settings.button_text_size }} {% if block.settings.button_style == 'link' %}link un-underlined-link{% else %}button button--{{ block.settings.button_style }}{% endif %}{% if block.settings.button_style_show_arrow %} button-with-icon button-with-icon--right{% endif %}{% if block.settings.button_style == 'secondary' and block.settings.button_style_show_gradient_border and block.settings.button_border_gradient != blank %} button--secondary-gradient{% endif %}"
                            {% if block.settings.button_style == 'secondary' and block.settings.button_style_show_gradient_border and block.settings.button_border_gradient != blank %} style="--color-secondary-button-border-gradient: {{ block.settings.button_border_gradient }}"{% endif %}
                        >
                          {{- block.settings.button_label | escape -}}
                          {% if block.settings.button_style_show_arrow %}
                            {% render 'icon-arrow' %}
                          {% endif %}
                        </a>
                      {%- endif -%}
                    </div>
                  {%- endif -%}

                </div>
                </{% if content_has_link == false and block.settings.card_link != blank %}a{% else %}div{% endif %}>
            </li>
          {%- endfor -%}
        </ul>

        {%- if show_mobile_slider -%}
          <div class="slider-buttons page-width no-js-hidden">
            <button
                type="button"
                class="slider-button button-control tap-target slider-button--prev"
                name="previous"
                aria-label="{{ 'general.slider.previous_slide' | t }}"
                aria-controls="Slider-{{ section.id }}"
            >
              {% render 'icon-caret' %}
            </button>

            <div class="slider-counter caption visually-hidden">
              <span class="slider-counter--current">1</span>
              <span aria-hidden="true"> / </span>
              <span>{{ 'general.slider.of' | t }}</span>
              <span class="slider-counter--total">{{ block_count }}</span>
            </div>

            <button
                type="button"
                class="slider-button button-control tap-target slider-button--next"
                name="next"
                aria-label="{{ 'general.slider.next_slide' | t }}"
                aria-controls="Slider-{{ section.id }}"
            >
              {% render 'icon-caret' %}
            </button>

            <div class="slider-scrollbar__track" style="--num-slides: {{ block_count }}" data-num-slides="{{ block_count }}">
              <div class="slider-scrollbar__indicator"></div>
            </div>
          </div>
        {%- endif -%}
      </slider-component>
    </div>
  </div>
{%- endif -%}

