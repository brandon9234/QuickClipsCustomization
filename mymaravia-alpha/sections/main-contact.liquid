{%- comment -%}theme-check-disable SchemaJsonFormat{%- endcomment -%}
<div class="color-{{ section.settings.color_scheme }} isolate gradient">
  {%- if section.settings.show_view_all_link and section.settings.view_all_text != blank -%}
    {% capture view_all %}
      <div class="section-view-all video__view-all{% if settings.animations_reveal_on_scroll and section.index > 1 %} scroll-trigger animate--fade-in{% endif %}">
        <a
            href="{{ section.settings.view_all_link }}"
            class="link un-underlined-link button-with-icon button-with-icon--right {{ section.settings.view_all_text_size }}"
        >
          {{ section.settings.view_all_text }}
          {% render 'icon-arrow' %}
        </a>
      </div>
    {% endcapture %}
  {%- endif -%}

  {%- liquid
    if section.settings.page_width == 'normal'
      assign custom_class = 'page-width'
    else
      assign custom_class = 'page-width page-width--narrow flex justify-center'
    endif

    assign page_title = page.title
    assign page_description = page.content
  -%}

  {% render 'standard-page-heading',
      page__name: 'contact_page',
      page_title: page_title,
      page_description: page_description,
      custom_class: custom_class,
      section: section,
      view_all: view_all
  %}
</div>

