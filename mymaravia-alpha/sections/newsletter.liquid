{%- comment -%}theme-check-disable SchemaJsonFormat{%- endcomment -%}
{%- liquid
  assign is_empty = true
  for block in section.blocks
    if block.type == 'email_form' or block.settings.image != blank or block.settings.title != blank or block.settings.text != blank or block.settings.link_label != blank or block.settings.stat_number != blank
      assign is_empty = false
    endif
  endfor
-%}

{%- if request.design_mode or section.settings.hide_when_empty == false or is_empty == false -%}
  {%- if section.index < 3 or request.design_mode -%}
    {{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
  {%- else -%}
    <link rel="stylesheet" href="{{ 'component-newsletter.css' | asset_url }}" media="print" onload="this.media='all'">
  {%- endif -%}

  {%- liquid
    assign image = section.settings.image
    assign media_aspect_ratio = section.settings.image_ratio

    if media_aspect_ratio != 'custom'
      assign ratio = 1.77
      if media_aspect_ratio == 'landscape_wide'
        assign ratio = 1.77
      elsif media_aspect_ratio == 'landscape_wider'
        assign ratio = 2.33
      elsif media_aspect_ratio == 'landscape'
        assign ratio = 1.33
      elsif media_aspect_ratio == 'square'
        assign ratio = 1
      elsif image and media_aspect_ratio == 'adapt'
        assign ratio = image.aspect_ratio
      endif
    endif

    assign fix_image = section.settings.fix_image

    assign preload = false
    assign fetch_priority = 'auto'
    if section.index == 1 or request.design_mode
      assign fetch_priority = 'high'
      assign preload = true
    endif
  -%}

<div class="color-{{ section.settings.color_scheme }} isolate gradient {{ section.settings.line_separator }} {{ section.settings.visibility }} {%- render 'class-time-of-day-to-show' -%}">
  <div class="section__inner
      {% unless section.settings.full_width %}
        page-width {{ section.settings.top_padding }} {{ section.settings.bottom_padding }}
      {% else %}
        pt-0 pb-0
      {% endunless %}
      {% if section.settings.show_text_below %} mobile-text-below{% endif %}"
  >
    <div class="
        {% unless section.settings.full_width %}
          {% if section.settings.container_color_scheme == section.settings.color_scheme and section.settings.show_text_below %}
            md:border-radius-media is-standard-color-scheme
          {% else %}
            border-radius-media
          {% endif %}
          overflow-hidden transform-none
        {% endunless %}">
      <div
          id="Banner-{{ section.id }}"
          class="banner image-overlay
            {% if media_aspect_ratio == 'custom' %} section-height-responsive--desktop{% else %} ratio{% endif %}
            banner--content-align-{{ section.settings.desktop_content_alignment }}
            banner--content-align-mobile-{{ section.settings.mobile_content_alignment }}
            {% if media_aspect_ratio != 'custom' %} xs:h-auto{% endif %}
            {% if media_aspect_ratio == 'custom' %} md:h-auto{% endif %}
            {% if section.settings.show_text_below %} banner--mobile-bottom{%- endif -%}
            {% if section.settings.show_text_below == false %}{% if section.settings.show_text_box == 'mobile' or section.settings.show_text_box == 'always' %} banner--mobile-box{% else %} banner--mobile-transparent{% endif %}{% endif %}
            {% if section.settings.show_text_box == 'desktop' or section.settings.show_text_box == 'always' %} banner--desktop-box{% else %} banner--desktop-transparent{% endif %}
            {% if settings.animations_reveal_on_scroll and section.index > 2 %} scroll-trigger animate--fade-in{% endif %}"
            style="--overlay-opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
              {% if media_aspect_ratio == 'custom' %}
                --mobile-height: {{ section.settings.mobile_section_height }}px;--desktop-height: {{ section.settings.desktop_section_height }}px;
              {% else %}
                --ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;
              {% endif %}"
      >
        {%- if section.settings.show_image -%}
          <div class="banner__media
              {% unless section.settings.full_width %}
                {% if section.settings.container_color_scheme == section.settings.color_scheme and section.settings.show_text_below %}border-radius-media overflow-hidden{% endif %}
              {% endunless %}
              media
              {% if media_aspect_ratio == 'custom' %} section-height-responsive--mobile{% else %} ratio{% endif %}
              {% if fix_image %}
                animate--fixed
              {% endif %}"
          >
            {%- if section.settings.image != blank -%}
              {%- liquid
                assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio

                if settings.animations_reveal_on_scroll and section.index > 2 and fix_image != true
                  assign image_class = image_class | append: ' scroll-trigger animate--zoom-in'
                endif
              -%}
              {{
                section.settings.image
                | image_url: width: 3840
                | image_tag:
                  width: section.settings.image.width,
                  height: image_height,
                  class: image_class,
                  sizes: '100vw',
                  widths: '375, 500, 1100, 1500, 1780, 2000, 3000, 3840',
                  fetchpriority: fetch_priority
              }}
            {% else %}
              {{ 'collection-5' | placeholder_svg_tag: 'placeholder-svg placeholder placeholder-svg--cover' }}
            {% endif %}
          </div>
        {%- endif -%}

        <div class="banner__content
            {% if media_aspect_ratio == 'custom' and section.settings.show_text_below == false %} section-height-responsive--mobile{% endif %}
            {{ section.settings.mobile_content_position }}
            {{ section.settings.desktop_content_position }} page-width
            {% if settings.animations_reveal_on_scroll and section.index > 2 %} scroll-trigger animate--slide-in{% endif %}"
        >
          {% form 'customer' %}
            <div class="banner__box section-content max-w-{{ section.settings.content_max_width }} content-container content-container--full-width-mobile color-{{ section.settings.container_color_scheme }} gradient items-{{ section.settings.mobile_content_alignment }} md:items-{{ section.settings.desktop_content_alignment }} text-{{ section.settings.mobile_content_alignment }} md:text-{{ section.settings.desktop_content_alignment }}">
              {%- liquid
                if request.design_mode
                  assign preview_success = section.settings.preview_success
                else
                  assign preview_success = false
                endif

                for block in section.blocks
                  assign show_block = false
                  if block.settings.visibility == "always" or block.settings.visibility == blank
                    assign show_block = true
                  elsif block.settings.visibility == "success" and form.posted_successfully? or preview_success
                    assign show_block = true
                  elsif block.settings.visibility == "before" and form.posted_successfully? == false and preview_success == false
                    assign show_block = true
                  endif

                  if show_block
                    render 'standard-blocks', section_name: 'banner', block: block, form: form, preview_success: preview_success, dont_render_customer_form: true
                  endif
                endfor
              -%}
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}

